{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@element-essentials/ui/*": ["packages/ui/src/*"],
      "@element-essentials/components/*": ["packages/components/src/*"],
      "@element-essentials/tokens/*": ["packages/tokens/src/*"]
    },
    "target": "es2018",
    "lib": ["dom", "es2018", "es2019", "es2020"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "apps/docs/app",
    "apps/web/app",
    "packages/components/src",
    "packages/components/types",
    "packages/components",
    "packages/docs/src",
    "packages/docs",
    "packages/tokens/src",
    "packages/tokens",
    "packages/ui/src",
    "packages/ui"
  ],
  "exclude": ["node_modules", "dist"]
}
