{
  "name": "element-essentials",
  "private": true,
  "workspaces": [
    "packages/tokens",
    "packages/components",
    "packages/docs",
    "apps/docs",
    "packages/typescript-config"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
