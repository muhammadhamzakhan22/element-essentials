{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
        ]
    },
    "include": [
        "src/**/*",
        "types/css.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}